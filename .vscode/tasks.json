{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build chess engine",
            "type": "shell",
            "command": "g++",
            "args": [
                "-o",
                "${workspaceFolder}/Engine/build/chess_engine.exe",
                "${workspaceFolder}/Engine/src/main.cpp",
                "${workspaceFolder}/Engine/src/bitboards.cpp",
                "${workspaceFolder}/Engine/src/chessboard.cpp",
                "${workspaceFolder}/Engine/src/wrapper.cpp",
                "-std=c++17",
                "-g",
                "-shared",
                "-fPIC",
                "-I${workspaceFolder}/Engine/include",
                "-I${command:python.interpreterPath}/include",
                "-I${command:python.interpreterPath}/Lib/site-packages/pybind11/include"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compiler task"
        }
    ]
}
